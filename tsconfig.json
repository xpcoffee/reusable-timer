{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ],
    "compilerOptions": {
        "strictNullChecks": true,
        "outDir": "./build",
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "jsxFactory": "h",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es6",
            // "scripthost"
        ]
    }
}